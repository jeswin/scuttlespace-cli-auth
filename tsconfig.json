{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es2017", "esnext", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"]
}
